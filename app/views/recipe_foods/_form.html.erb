<%= form_with(model: @recipe_food, url: recipe_foods_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :recipe_id %>
    <%= form.collection_select :recipe_id, Recipe.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :food_id %>
    <%= form.collection_select :food_id, Food.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
