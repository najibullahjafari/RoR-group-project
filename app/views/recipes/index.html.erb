<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<h1>Recipes</h1>
<% if @recipes.empty? %>
  <h2>There are no recipes created yet</h2>
<% else %>
  <% @recipes.each do |recipe| %>
    <div>
      <h3><%= recipe.name %></h3>
      <p>Description: <%= recipe.description %></p>
    </div>
    <%= form_for recipe, method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } do |f| %>
  <%= f.submit 'Delete Recipe', class: 'btn btn-danger' %>
<% end %>

  <% end %>
<% end %>
